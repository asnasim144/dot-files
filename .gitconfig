[user]
    name = Your Name
    email = your.email@example.com
    signingkey = YOUR-GPG-KEY-ID

[core]
    editor = code --wait
    autocrlf = input
    safecrlf = warn
    excludesfile = ~/.gitignore_global
    pager = less -FRX
    quotepath = false
    ignorecase = false

[init]
    defaultBranch = main

[push]
    default = current
    autoSetupRemote = true

[pull]
    rebase = true

[fetch]
    prune = true

[rebase]
    autoStash = true

[merge]
    ff = only
    tool = vscode

[mergetool "vscode"]
    cmd = code --wait $MERGED
    trustExitCode = true

[diff]
    tool = vscode
    mnemonicPrefix = true
    colorMoved = zebra

[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE

[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto
    interactive = auto

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    unstage = reset HEAD --
    last = log -1 HEAD
    visual = !gitk
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    amend = commit --amend --no-edit
    undo = reset --soft HEAD^
    stash-all = stash save --include-untracked
    tags = tag -l
    branches = branch -a
    remotes = remote -v
    contributors = shortlog --summary --numbered
    uncommit = reset --soft HEAD~1
    unstage = reset HEAD --
    discard = checkout --
    uncommit = reset --soft HEAD~1
    undo = reset --soft HEAD^
    amend = commit --amend --no-edit
    last = log -1 HEAD
    visual = !gitk
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[help]
    autocorrect = 1

[credential]
    helper = cache --timeout=3600

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[url "git@github.com:"]
    insteadOf = https://github.com/

[url "git@gitlab.com:"]
    insteadOf = https://gitlab.com/

[url "git@bitbucket.org:"]
    insteadOf = https://bitbucket.org/

[protocol]
    version = 2

[transfer]
    fsckObjects = true

[receive]
    fsckObjects = true

[fetch]
    fsckObjects = true

[maintenance]
    auto = true
    strategy = incremental

[gc]
    auto = 256
    autoDetach = true
    reflogExpire = 90
    reflogExpireUnreachable = 30
    pruneExpire = 30
    worktreePruneExpire = 30
    aggressiveWindow = 250
    maxDeltaCacheSize = 256
    packSizeLimit = 100m
    writeCommitGraph = true

[pack]
    compression = 9
    writeReverseIndex = true
    deltaCacheSize = 256m
    windowMemory = 256m
    threads = 0

[index]
    version = 4

[status]
    showStash = true
    submoduleSummary = true
    relativePaths = true
    branch = true
    showUntrackedFiles = all

[log]
    date = iso
    decorate = short
    showSignature = true
    abbrevCommit = true
    follow = true

[blame]
    coloring = highlightRecent
    date = relative
    ignoreRevsFile = .git-blame-ignore-revs

[commit]
    template = ~/.gitmessage
    verbose = true
    cleanup = strip
    gpgSign = true

[tag]
    sort = version:refname
    forceSignAnnotated = true

[submodule]
    recurse = true
    fetchJobs = 0

[worktree]
    pruneOnCheckout = true

